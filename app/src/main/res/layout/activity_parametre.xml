<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parametre_LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    tools:context=".ui.ParametersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/roundborder"
                android:text="Capteur :"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activity_parametre_controlleur_name"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/rectangleborder"
                android:text="pas de souris détéctée" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:background="@drawable/roundborder"
                android:text="État du capteur :"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/parametre_etat_controlleur"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="100dp"
                android:src="@drawable/reddot" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="#1A76D2"
            android:orientation="vertical">

            <Button
                android:id="@+id/activity_parametre_valider_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="Valider"
                android:textColor="#1A76D2" />

            <Button
                android:id="@+id/activity_parametre_retour_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="Retour"
                android:textColor="#1A76D2" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>